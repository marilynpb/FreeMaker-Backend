<link rel="stylesheet" href="../css/moderno2.css">
<title>Diseño Moderno2</title>
<header>
    <a class="otro" href="/elegirPlantilla/soloElegirPlantilla">⤺Cambiar diseño</a>
    <a class="otro" href="/elegirPlantilla/imprimirModerno2">⭳Descargar</a>
</header>
<main>
    <div class="container">
        <form action="" method="get">
            <div class="izquierda">
                {{#each user}}
                    <img src="../img/perfiles/{{this.imagen}}">
                {{/each}}

            <h2>CONTACTO</h2>
                {{#each personal}}
                    <table>
                        <tr>
                            <th><img src="../img/Iconos/geo.svg"></th>
                            <th><p>{{this.calle}} {{this.altura}}, {{this.pais}}</p></th>
                        </tr>
                        <tr class="tableContacto">
                            <th><img src="../img/Iconos/tel.svg"></th>
                            <th><p>{{this.telefono}}</p>
                        </tr>
                {{/each}}
                        {{#each user}}
                            <tr class="tableContacto">
                                <th><img src="../img/Iconos/mail.svg"></th>
                                <th><p>{{this.email}}</p></th>
                            </tr>
                        {{/each}}
                    </table>
                <hr>

                <h2>IDIOMAS</h2>
                {{#each laboralData}}
                    <ul>
                        <li>
                            <table>
                                <tr>
                                    <th><p>{{this.idioma}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel}}</p></th>
                                </tr>
                            </table>
                        </li>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma2}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel2}}</p></th>
                                </tr>
                            </table>
                        </li>
                        <li>
                            <table>
                                <tr class="tableContacto">
                                    <th><p>{{this.idioma3}}</p></th>
                                    <th class="alineacionFin"><p>{{this.nivel3}}</p></th>
                                </tr>
                            </table>
                        </li>
                    </ul>
                {{/each}}
            </div>

        <div class="derecha">
            {{#each personal}}
                <h1>{{this.nombre}} {{this.apellido}}</h1>
            {{/each}}
            <div class="borde">
                <table>
                    <tr>
                        <th class="icon1"><img src="../img/Iconos/card-checklist.svg""></th>
                        <th><h2 class="margen">PERFÍL</h2></th>     
                    </tr>
                </table>
                <table>
                    {{#each descripcionData}}
                        <tr>
                            <th><h3 class="black">{{this.descripcionPerfil}}</h3></th>
                        </tr>
                    {{/each}}            
                </table>
            </div>

            <div class="borde">
                <table>
                    <tr>
                        <th  class="icon2"><img src="../img/Iconos/briefcase-fill.svg"></th>
                        <th><h2 class="margen">EXPERIENCIA LABORAL</h2></th>
                    </tr>
                </table>
                <table>
                    {{#each laboralData}}
                        <tr>
                            <th><h3 class="black">{{this.puesto}}</h3></th>
                        </tr>
                        <tr>
                            <td><h3>{{this.empresa}} | {{this.desde}} - {{this.hasta}}</h3></td>
                        </tr>
                        <tr class="tareas">
                            <ul>
                                <li>
                                    <td><p>{{this.descripcion}}</p></td>
                                </li>
                            </ul>
                        </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto2}}</h3></th>
                    </tr>
                    <tr>
                        <td><h3>{{this.empresa2}} | {{this.desde2}} - {{this.hasta2}}</h3></td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion2}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.puesto3}}</h3></th>
                    </tr>
                    <tr>
                        <td><h3>{{this.empresa3}} | {{this.desde3}} - {{this.hasta3}}</h3></td>
                    </tr>
                    <tr class="tareas">
                        <ul>
                            <li>
                                <td><p>{{this.descripcion3}}</p></td>
                            </li>
                        </ul>
                    </tr>
                </table>
            </div>

            <div class="borde">
                <table>
                    <tr>
                        <th  class="icon3"><img src="../img/Iconos/mortarboard-fill.svg"></th>
                        <th><h2 class="margen">FORMACIÓN ACADÉMICA</h2></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.carrera}}</h3></th>
                    </tr>
                    <tr>
                        <td><h3>{{this.instituto}} - {{this.finalizado}}</h3></td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.carrera2}}</h3></th>
                    </tr>
                <tr>
                    <td><h3>{{this.instituto2}} - {{this.finalizado2}}</h3></td>
                </tr>
                </table>
                <table>
                    <tr>
                        <th><h3 class="black">{{this.carrera3}}</h3></th>
                </tr>
                <tr>
                    <td><h3>{{this.instituto3}} - {{this.finalizado3}}</h3></td>
                </tr>
                </table>
            </div>
            {{/each}}
        </div>
        </form>
    </div>
</main>



